<article>

  <script>
    window.onload = function() {
        var data = {};
        var s = new WebSocket("ws://127.0.0.1:8001/");
        s.onopen = function() {
            s.send('New participant joined');
        };
        s.onmessage = function(e) {
            $("#chat").append("<div>" + e.data + "</div>");
        };
        $('#chatform').submit(function (evt) {
            var line = $('#chatform [type=text]').val()
            $('#chatform [type=text]').val('')
            s.send(line);
            return false;
        });
    };
  </script>

  <h3>Chat!</h3>
  <div id="chat"></div>
  <form id="chatform">
    <input type="text" />
    <input type="submit" />
  </form>
</article>
